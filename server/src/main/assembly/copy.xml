<?xml version="1.0" encoding="UTF-8"?>
<assembly>

    <id>distribution</id>

    <formats>
        <format>dir</format>
    </formats>

    <fileSets>
        <!--
         | copy benchmarks scripts
        -->


        <!--
         | copy server scripts
        -->
        <fileSet>
            <directory>${basedir}/scripts</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*.bat</include>
            </includes>
            <fileMode>644</fileMode>
            <filtered>true</filtered>
        </fileSet>


        <!--
         | copy distributed scripts
        -->

        <!--
         | copy graphdb scripts
        -->

        <!--
         | configurations
        -->
        <fileSet>
            <directory>${basedir}/config</directory>
            <outputDirectory>config</outputDirectory>
        </fileSet>

        <fileSet>
            <directory>${basedir}/config/cert</directory>
            <outputDirectory>config/cert</outputDirectory>
        </fileSet>        

        <!--
         | Plugins
        -->
        <fileSet>
            <directory>${basedir}/plugins</directory>
            <outputDirectory>plugins</outputDirectory>
        </fileSet>



        <!--
         | creates an empty log directory
        -->
        <fileSet>
            <directory>${basedir}/config</directory>
            <outputDirectory>log</outputDirectory>
            <excludes>
                <exclude>*</exclude>
            </excludes>
        </fileSet>


    </fileSets>

    <!--
     | includes legals
    -->
    <files>
        <file>
            <source>${basedir}/license.txt</source>
            <fileMode>444</fileMode>
        </file>
        <file>
            <source>${basedir}/history.txt</source>
            <fileMode>444</fileMode>
        </file>
        <file>
            <source>${basedir}/readme.txt</source>
            <fileMode>444</fileMode>
        </file>
    </files>

    <!--
     | all artifacts in a /lib dir
    -->
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*:jar:*</include>
            </includes>
            <excludes>
                <exclude>*:ant:*</exclude>
                <exclude>*:ant-launcher:*</exclude>
                <exclude>*:ivy:*</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>

</assembly>
